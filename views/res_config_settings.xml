<?xml version="1.0" encoding="utf-8"?>
<odoo> 
    <data> 
        <record id="res_config_settings_view_form_inherit_bits" model="ir.ui.view" >
            <field name="name">res.config.settings.view.form.inherit.bits</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//block[@id='pos_interface_section']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_logo_image" widget="image"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_logo_image"/>
                        </div>    
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">  
                        <div class="o_setting_right_pane">
                            <label for="pos_theme_configuration_id"/>
                            <field name="pos_theme_configuration_id" required="1"/>
                        </div>
                    </div>  
                    <div class="col-12 col-lg-6 o_setting_box">  
                        <div class="o_setting_left_pane">
                            <field name="pos_floor_background" widget="image"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_floor_background"/>
                        </div> 
                    </div> 
                </xpath>
            </field>
        </record> 
    </data>  
</odoo>
